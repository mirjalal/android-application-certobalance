<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/application_settings_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/application_settings_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settings_partcounting_text_instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Pleace place 10 pcs. on the plate and press OK"
            android:textSize="20sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/settings_partcounting_button_cancel"
                android:text="CANCEL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_white_shadow_clickable"
                android:layout_weight="1" />

            <Button
                android:text="OK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/settings_partcounting_button_ok"
                android:background="@drawable/btn_white_shadow_clickable"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/application_settings_container"
        android:layout_width="match_parent"

        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/settings_partcounting_button_awp"
        android:text="Set average piece weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_white_shadow_clickable"
        android:layout_weight="1" />

    <Button
        android:text="Calculate average piece weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/settings_partcounting_button_calc_awp"
        android:background="@drawable/btn_white_shadow_clickable"
        android:layout_weight="1" />

    <Button

        android:text="Set number of samples"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/settings_partcounting_button_sample_size"
        android:background="@drawable/btn_white_shadow_clickable"
        android:layout_weight="1" />

        <Button

            android:text="Under limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_partcounting_button_under_limit"
            android:background="@drawable/btn_white_shadow_clickable"
            android:layout_weight="1" />

        <Button

            android:text="Over limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_partcounting_button_over_limit"
            android:background="@drawable/btn_white_shadow_clickable"
            android:layout_weight="1" />


        <Button

            android:text="Save to library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_partcounting_button_save"
            android:background="@drawable/btn_white_shadow_clickable"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>