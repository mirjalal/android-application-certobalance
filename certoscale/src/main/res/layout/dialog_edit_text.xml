<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_number_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

<LinearLayout 
	    android:layout_height="wrap_content"
    	android:layout_width="match_parent" 	
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="vertical" 
	            >


	            

	    	<LinearLayout
				android:id="@+id/dialog_container_text"
	  	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  	  
	        android:orientation="horizontal"
				android:layout_margin="50dp"
	        android:layout_marginBottom="20dp">
	    	

	    	    
	    	    <EditText 
	    	android:id="@+id/dialog_edit_text_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="@drawable/textfield"	
	        android:layout_weight="1"
	        android:hint="NAME"
	        android:imeOptions="actionDone"   	        
	    	        />


  
	    	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/dialog_container_text"
		>
		<Button
			android:id="@+id/dialog_edit_text_button_cancel"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="CANCEL"
			android:layout_margin="5dp"
			android:textColor="@android:color/white"
			android:background="@drawable/btn_blue_dark"
			/>


		<Button
			android:id="@+id/dialog_edit_text_button_save"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="SAVE"
			android:layout_margin="5dp"
			android:textColor="@android:color/white"
			android:background="@drawable/btn_blue_dark"

			/>


	</LinearLayout>
	        </LinearLayout>

</RelativeLayout>