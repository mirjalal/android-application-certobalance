<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_number_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gadient">

<LinearLayout 
	    android:layout_height="wrap_content"
    	android:layout_width="match_parent" 	
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="vertical" 
	            >


	            

	    	<LinearLayout 
	  	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  	  
	        android:orientation="horizontal"
				android:layout_margin="50dp"
	        android:layout_marginBottom="20dp">
	    	

	    	    
	    	    <EditText 
	    	android:id="@+id/dialog_edit_number_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="@drawable/edit_text_background_white"
	        android:layout_weight="1"
	        android:numeric="integer"
	        android:imeOptions="actionDone"   	        
	    	        />

	    	<TextView
				android:id="@+id/dialog_edit_number_text_unit"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="30dp"
	    	    android:layout_marginLeft="20dp"
	    	    android:layout_weight="1"
	    	    android:singleLine="true"
	    	    android:text="UNIT"
	    	    android:textColor="@android:color/white"
	    	    android:textSize="20dp"
	    	    tools:ignore="HardcodedText" />
  
	    	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/dialog_container_text"
		>
		<Button
			android:id="@+id/dialog_edit_number_button_cancel"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="CANCEL"
			android:layout_margin="5dp"
			android:textColor="@android:color/white"
			android:textSize="25sp"
			android:background="@drawable/quickaction_slider_btn"
			/>


		<Button
			android:id="@+id/dialog_edit_number_button_ok"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="OK"
			android:layout_margin="5dp"
			android:textColor="@android:color/white"
			android:textSize="25sp"
			android:background="@drawable/quickaction_slider_btn"

			/>


	</LinearLayout>
	        </LinearLayout>

</RelativeLayout>