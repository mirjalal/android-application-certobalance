<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_number_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gadient">


	<TableLayout
		android:layout_centerHorizontal="true"
		android:id="@+id/dialog_statistics_table_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:gravity="center_horizontal"
		android:layout_gravity="center_horizontal">
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Statistics"
				android:textStyle="bold"
				style="@style/text_statistics"/>
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="            Value"
				android:gravity="right"
				android:textStyle="bold"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Number of samples"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_sample_number"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:text="1"
				style="@style/text_statistics"/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Total"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_total"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="1"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Mean"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_average"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="43 PCS"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Standard deviation"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_stdev"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="43PCS"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Minimum"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_minimum"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="0PCS"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Maximum"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_maximum"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="43PCS"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Variance"
				style="@style/text_statistics"/>
			<TextView
				android:id="@+id/dialog_statistics_text_range"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="1"
				android:gravity="right"
				style="@style/text_statistics"/>
		</TableRow>

	</TableLayout>




	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/dialog_statistics_table_container"
		>
		<Button
			android:id="@+id/dialog_statistics_button_clear"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Clear data"
			style="@style/button_default"
			/>
		<Button
			android:id="@+id/dialog_statistics_button_print"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Print"
			style="@style/button_default"
			/>

		<Button
			android:id="@+id/dialog_statistics_button_samples"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Show Samples"
			style="@style/button_default"
			/>
		<Button
			android:id="@+id/dialog_statistics_button_close"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Close"
			style="@style/button_default"

			/>


	</LinearLayout>


</RelativeLayout>