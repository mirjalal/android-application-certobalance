<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/application_settings_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/application_settings_container"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settings_check_weighing_text_instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Please"
            android:gravity="center"
            style="@style/text_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/settings_check_weighing_button_cancel"
                android:text="CANCEL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/button_actionbar"/>

            <Button
                android:text="OK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/settings_check_weighing_button_ok"
                android:layout_weight="1"
                style="@style/button_actionbar"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/application_settings_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button

            android:text="Under limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_check_weighing_button_under_limit"
            android:layout_weight="1"
            style="@style/button_actionbar"/>

        <Button

            android:text="Over limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_check_weighing_button_over_limit"
            android:layout_weight="1"
            style="@style/button_actionbar"/>

        <Button

            android:text="Nominal weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_check_weighing_button_nominal"
            android:layout_weight="1"
            style="@style/button_actionbar"/>

        <Button

            android:text="- Tolerance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_check_weighing_button_nominal_tolerance_under"
            android:layout_weight="1"
            style="@style/button_actionbar"/>

        <Button

            android:text="+ Tolerance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settings_check_weighing_button_nominal_tolerance_over"
            android:layout_weight="1"
            style="@style/button_actionbar"/>


    </LinearLayout>
</LinearLayout>