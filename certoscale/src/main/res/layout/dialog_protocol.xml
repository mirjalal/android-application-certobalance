<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dialog_edit_number_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/background_gadient">

	<ScrollView
		android:id="@+id/dialog_protocol_scroll"
		android:layout_width="350dp"
		android:layout_centerHorizontal="true"
		android:layout_height="340dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"

		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_below="@+id/dialog_ingrediantcosts_header">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter"
				android:src="@drawable/protocol_paper_top"/>

			<TextView
				android:id="@+id/dialog_protocol_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white"
				style="@style/text_protocol"/>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter"
				android:src="@drawable/protocol_paper_bottom"/>

		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/dialog_protocol_scroll"
		>


		<Button
			android:id="@+id/dialog_button_close"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="@string/close"
			style="@style/button_default"

			/>


	</LinearLayout>




</RelativeLayout>