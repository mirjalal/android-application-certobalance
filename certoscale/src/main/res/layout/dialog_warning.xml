<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_number_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gadient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/dialog_warning_ll_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_warning_txt_message"
                style="@style/warning_text_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AAXAasdasdsadasdasdasdasdasdasdasdasddsaX" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_warning_btn_ignore"
                style="@style/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/ignore"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/dialog_warning_btn_abort"
                style="@style/button_default"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/abort"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>