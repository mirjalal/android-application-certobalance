<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/ic_menu_protocol"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" >
        
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first line"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:ignore="HardcodedText" />

        </LinearLayout>


    <LinearLayout

            android:id="@+id/container_button"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp" ></LinearLayout>

    <ImageView
        android:id="@+id/menu_main_protocol_image_cloud"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/cloud_ok_white"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/container_button"
        android:layout_alignEnd="@+id/container_button" />

</RelativeLayout>