<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_gadient">
 
    <LinearLayout 
        android:id="@+id/dialog_container_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"  
        >

 
    <TextView
        android:id="@+id/dialog_cloud_local_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal|bottom"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />
    
    <View
    android:layout_height="match_parent"
    android:layout_width="1dp"
    android:background="@android:color/darker_gray"/>
    
    
    <TextView
        android:id="@+id/dialog_cloud_local_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal|bottom"
        android:text="Create a new program manually"
        android:textColor="@android:color/white"
        android:textSize="25sp" />
      <View
    android:layout_height="match_parent"
    android:layout_width="1dp"
    android:background="@android:color/darker_gray"/>
        
     <TextView
        android:id="@+id/dialog_cloud_local_cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal|bottom"
        android:text="Create a new program from template"
         android:textColor="@android:color/white"
         android:textSize="25sp" />
    </LinearLayout>
    
 <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"   
        android:layout_below="@+id/dialog_container_text"
     >
         <Button
        android:id="@+id/dialogButtonNO"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="@string/cancel"
        android:layout_margin="5dp"
        android:background="@drawable/quickaction_slider_btn"
             android:textColor="@android:color/white"
             android:textSize="25sp"
        />
         
     <Button
        android:id="@+id/dialogButtonLocal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Create new"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/quickaction_slider_btn"
         android:textSize="25sp"

        />
     
          <Button
        android:id="@+id/dialogButtonCloud"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Browse templates"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/quickaction_slider_btn"
              android:textSize="25sp"

        />
          

 </LinearLayout>
</LinearLayout>