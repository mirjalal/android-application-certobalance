<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_number_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gadient">


	<ListView
		android:id="@+id/dialog_pipette_listview"
		android:layout_width="match_parent"
		android:layout_above="@+id/dialog_batch_List"
		android:layout_height="300dp" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/dialog_pipette_listview"
		>
		<Button
			android:id="@+id/dialog_pipette_button_clear"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Clear data"
			style="@style/button_default"
			/>


		<Button
			android:id="@+id/dialog_pipette_button_close"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:text="Close"
			style="@style/button_default"

			/>


	</LinearLayout>




</RelativeLayout>