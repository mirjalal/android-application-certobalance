<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


    <Button
    android:id="@+id/application_settings_density_button_water_temp"
    android:text="Water Temperature"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    style="@style/button_actionbar"/>


    <Button
        android:id="@+id/application_settings_density_button_liquid_density"
        android:text="Liquid Density"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        style="@style/button_actionbar"/>

    <Button
        android:id="@+id/application_settings_density_button_Sinker_Volume"
        android:text="Liquid Density"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        style="@style/button_actionbar"/>

    <Button
        android:id="@+id/application_settings_density_button_Oil_Density"
        android:text="Oil Density"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        style="@style/button_actionbar"/>



    </LinearLayout>
</RelativeLayout>