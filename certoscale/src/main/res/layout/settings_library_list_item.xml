<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gadient">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_cloud_x"
        android:layout_alignParentLeft="true" >
        
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginLeft="10dp"
            android:gravity="center_vertical"  >

        <TextView
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first line"
            android:textStyle="bold"
            style="@style/text_default"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView1">

        <TextView
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="second line"
            android:textStyle="bold"
            style="@style/text_default_small"/>

        <TextView
            android:id="@+id/third_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="third line"
            android:textStyle="bold"
            style="@style/text_default_small" />

</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_list_element_container_button"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp" ></LinearLayout>

</RelativeLayout>