<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="@string/enable_disable_features" >
        <CheckBoxPreference
            android:key="@string/preferences_filling_activated"
            android:defaultValue="@bool/preferences_filling_activated_default"
            android:title="@string/activated"
            android:summary="@string/turn_the_application_on_off"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_lock"
            android:defaultValue="@bool/preferences_filling_lock"
            android:title="@string/lock"
            android:summary="@string/lock_the_settings_of_this"
            android:disableDependentsState="true" >
        </CheckBoxPreference>


        <CheckBoxPreference
            android:key="@string/preferences_filling_auto_mode"
            android:defaultValue="@bool/preferences_filling_auto_mode"
            android:title="@string/auto_mode"
            android:summary="@string/turn_this_feature_on_off"
            android:dependency="@string/preferences_filling_lock" >
            android:disableDependentsState="true" >
        </CheckBoxPreference>

        <!--
        <ListPreference
            android:key="preferences_check_limitmode"
            android:title="Statistics"
            android:dependency="@string/preferences_filling_lock"
            />
    -->

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/visibility" >



        <CheckBoxPreference
            android:key="@string/preferences_filling_target_visible"
            android:defaultValue="@bool/preferences_filling_target_visible"
            android:title="@string/tarrget_weight"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_differencew_visible"
            android:defaultValue="@bool/preferences_filling_differencew_visible"
            android:title="@string/difference_weight"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_differencep_visible"
            android:defaultValue="@bool/preferences_filling_differencep_visible"
            android:title="@string/difference_in_percent"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_brutto_visible"
            android:defaultValue="@bool/preferences_filling_brutto_visible"
            android:title="@string/brutto"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_netto_visible"
            android:defaultValue="@bool/preferences_filling_netto_visible"
            android:title="@string/netto"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_tara_visible"
            android:defaultValue="@bool/preferences_filling_tara_visible"
            android:title="@string/tara"
            android:summary="@string/turn_this_value_visible_invisible"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/printer_options" >
        <CheckBoxPreference
            android:key="@string/preferences_filling_print_target"
            android:defaultValue="@bool/preferences_filling_print_target"
            android:title="@string/target_weight"
            android:summary="@string/print_this_property_yes_no"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_print_differencew"
            android:defaultValue="@bool/preferences_filling_print_differencew"
            android:title="@string/difference_weight"
            android:summary="@string/print_this_property_yes_no"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_filling_print_differencep"
            android:defaultValue="@bool/preferences_filling_print_differencep"
            android:title="@string/difference_in_percent"
            android:summary="@string/print_this_property_yes_no"
            android:dependency="@string/preferences_filling_lock" >
        </CheckBoxPreference>

    </PreferenceCategory>


</PreferenceScreen>