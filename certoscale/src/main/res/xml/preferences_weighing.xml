<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
        

    <PreferenceCategory android:title="ENABLE / DISABLE FEATURES" >
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_activated"
	    	android:defaultValue="@bool/preferences_weigh_activated_default"
	    	android:title="Activated"
	    	android:summary="Turn the application on/off"
			android:dependency="@string/preferences_weigh_lock">
    	</CheckBoxPreference>

		<CheckBoxPreference
			android:key="@string/preferences_weigh_lock"
			android:defaultValue="@bool/preferences_weigh_lock"
			android:disableDependentsState="true"
			android:title="Lock"
			android:summary="Lock the weighing settings on/off">
		</CheckBoxPreference>
  
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_minimum"
	    	android:defaultValue="@bool/preferences_weigh_minimum"
	    	android:title="Minimum weight"
	    	android:summary="Turn the minimum weight on/off"
			android:dependency="@string/preferences_weigh_lock">
    	</CheckBoxPreference>

		<CheckBoxPreference
			android:key="@string/preferences_weigh_auto_mode"
			android:defaultValue="@bool/preferences_weigh_auto_mode"
			android:title="Auto mode"
			android:summary="Turn the auto mode on/off"
			android:dependency="@string/preferences_weigh_lock">
		</CheckBoxPreference>


    		
 
   </PreferenceCategory>
   
   <PreferenceCategory android:title="VISIBILITY"
	   >
   
   		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_load_visible"
	    	android:defaultValue="@bool/preferences_weigh_load_visible"
	    	android:title="Load in Percent"
	    	android:summary="Turn the load in percent line visible/invisible"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>
 
   		
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_minimum_visible"
	    	android:defaultValue="@bool/preferences_weigh_minimum_visible"
	    	android:title="Minimum weight"
	    	android:summary="Turn the minimum weight visible/invisible"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>	
 
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_brutto_visible"
	    	android:defaultValue="@bool/preferences_weigh_brutto_visible"
	    	android:title="Brutto"
	    	android:summary="Turn the brutto weight visible/invisible"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>	
    
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_netto_visible"
	    	android:defaultValue="@bool/preferences_weigh_netto_visible"
	    	android:title="Netto"
	    	android:summary="Turn the netto weight visible/invisible"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>	
    		
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_tara_visible"
	    	android:defaultValue="@bool/preferences_weigh_tara_visible"
	    	android:title="Tara"
	    	android:summary="Turn the tara weight visible/invisible"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>	
    			
</PreferenceCategory>

<PreferenceCategory android:title="PRINTER OPTIONS" >
		<CheckBoxPreference
	    	android:key="@string/preferences_weigh_print_min"
	    	android:defaultValue="@bool/preferences_weigh_print_min"
	    	android:title="Print Minimum Weight"
	    	android:summary="Print the minimum weight yes/no"
	    	android:dependency="@string/preferences_weigh_lock" >
    	</CheckBoxPreference>
    	
</PreferenceCategory>


</PreferenceScreen>