








<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="ENABLE / DISABLE FEATURES" >
        <CheckBoxPreference
        android:key="@string/preferences_check_activated"
        android:defaultValue="@bool/preferences_check_activated"
        android:title="Activated"
        android:summary="Turn the application on/off"
        android:dependency="@string/preferences_check_lock" >
    </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_lock"
            android:defaultValue="@bool/preferences_check_lock"
            android:title="Lock"
            android:summary="Lock the check weighing settingson/off"
            android:disableDependentsState="true">
        </CheckBoxPreference>

        <ListPreference
            android:key="preferences_check_limitmode"
            android:title="Limit Mode"
            android:summary="Select Limit Settings"
            android:dependency="@string/preferences_check_lock"
            />

        <ListPreference
            android:key="preferences_check_statistics"
            android:title="Statistics"
            android:summary="Select statistics "
            android:dependency="@string/preferences_check_lock"
            />

        <ListPreference
            android:key="preferences_check_displayoptions"
            android:title="Display Options"
            android:summary="Select statistics "
            android:dependency="@string/preferences_check_lock"
            />


    </PreferenceCategory>

    <PreferenceCategory android:title="VISIBILITY" >

        <CheckBoxPreference
            android:key="@string/preferences_check_secondary_visible"
            android:defaultValue="@bool/preferences_check_secondary_visible"
            android:title="Secondary Unit"
            android:summary="Turn the secondary display line visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_over_visible"
            android:defaultValue="@bool/preferences_check_over_visible"
            android:title="Over Limit"
            android:summary="Turn upper limitvisible/invisible"
            android:dependency="@string/preferences_check_lock" >
        </CheckBoxPreference>


        <CheckBoxPreference
            android:key="@string/preferences_check_under_visible"
            android:defaultValue="@bool/preferences_check_under_visible"
            android:title="Under Limit"
            android:summary="Turn lower limit visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_brutto_visible"
            android:defaultValue="@bool/preferences_check_brutto_visible"
            android:title="Brutto"
            android:summary="Turn the bruto weight visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_netto_visible"
            android:defaultValue="@bool/preferences_check_netto_visible"
            android:title="Netto"
            android:summary="Turn the netto weight visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_tara_visible"
            android:defaultValue="@bool/preferences_check_tara_visible"
            android:title="Tara"
            android:summary="Turn the tara weight visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_target_visible"
            android:defaultValue="@bool/preferences_check_target_visible"
            android:title="Target"
            android:summary="Turn the target weight visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_overtolerance_visible"
            android:defaultValue="@bool/preferences_check_overtolerance_visible"
            android:title="Over Tolerance"
            android:summary="Turn Over Tolerance visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_undertolerance_visible"
            android:defaultValue="@bool/preferences_check_undertolerance_visible"
            android:title="Under Tolerance"
            android:summary="Turn Under Tolerance visible/invisible"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

    </PreferenceCategory>

    <PreferenceCategory android:title="PRINTER OPTIONS" >
        <CheckBoxPreference
            android:key="@string/preferences_check_print_target"
            android:defaultValue="@bool/preferences_check_print_target"
            android:title="Target"
            android:summary="Print the target weight on/off"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_print_overtolerance"
            android:defaultValue="@bool/preferences_check_print_overtolerance"
            android:title="Over Tolerance"
            android:summary="Print Over Tolerance on/off"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="@string/preferences_check_print_undertolerance"
            android:defaultValue="@bool/preferences_check_print_undertolerance"
            android:title="Under Tolerance"
            android:summary="Print Under Tolerance on/off"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>


        <CheckBoxPreference
            android:key="@string/preferences_check_print_overlimit"
            android:defaultValue="@bool/preferences_check_print_overlimit"
            android:title="Over Limit"
            android:summary="Print upper limit on/off"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>


        <CheckBoxPreference
            android:key="@string/preferences_check_print_underlimit"
            android:defaultValue="@bool/preferences_check_print_underlimit"
            android:title="Under Limit"
            android:summary="Print lower limit on/off"
            android:dependency="@string/preferences_check_lock">
        </CheckBoxPreference>



    </PreferenceCategory>


</PreferenceScreen>