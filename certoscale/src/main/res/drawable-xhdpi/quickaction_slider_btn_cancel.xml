<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@android:color/transparent" />
            <gradient android:angle="-90" android:startColor="@color/dark_red" android:endColor="@color/dark_red"  />
            <padding android:top="5dp" android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#971E05" />
            <solid android:color="#58857e"/>
            <padding android:top="5dp" android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <solid android:color="#4023A96E"/>
            <padding android:top="5dp" android:bottom="5dp" />
        </shape>
    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@android:color/transparent" />
           <gradient android:angle="-90" android:startColor="@color/red" android:endColor="@color/red"/>
            <!--gradient android:angle="-90" android:startColor="@color/button_ae_adam" android:endColor="@color/button_ae_adam"/-->
            <!--<gradient android:angle="-90" android:startColor="@color/button_kern" android:endColor="@color/button_kern"/>-->
            <padding android:top="5dp" android:bottom="5dp" />
        </shape>
    </item>
</selector>
